{
  "name": "healthbridge-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "start": "bun run dist/index.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun src/migrate.ts",
    "db:seed": "bun seed/index.ts",
    "db:seed-roles": "bun seed/seed-roles.ts",
    "db:seed-users": "bun seed/seed-users.ts",
    "db:seed-indian": "bun seed/seed-indian-users.ts",
    "db:seed-patients": "bun seed/seed-patients.ts",
    "db:seed-appointments": "bun seed/seed-appointments.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "hono": "^4.6.14",
    "drizzle-orm": "^0.36.4",
    "@neondatabase/serverless": "latest",
    "@upstash/redis": "^1.34.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.7",
    "drizzle-kit": "^0.30.1"
  }
}
